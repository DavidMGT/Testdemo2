<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.work.student.homework.XueanZeFragment">

    <include
        android:id="@+id/rl_header"
        layout="@layout/item_zuoye_header" />

    <TextView
        android:id="@+id/tv_des"
        style="@style/text_color_gray_size14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_header"
        android:padding="@dimen/x10"
        android:text="1，Who is the Speakers？" />

    <ImageView
        android:id="@+id/iv_drawable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_des"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY" />

    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/iv_drawable"
        android:background="@color/gray1"></View>

    <TextView
        android:id="@+id/tv_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/line1"
        android:layout_marginTop="@dimen/y10"
        android:paddingLeft="@dimen/x10"
        android:text="请选择正确答案:" />

    <ListView
        android:id="@+id/ll_selctions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_info"
        android:divider="@color/gray1"
        android:dividerHeight="@dimen/x2"></ListView>

</RelativeLayout>
