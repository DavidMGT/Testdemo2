<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/fl_unlimted"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/history_unlimited"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="不限"
                android:textColor="@color/red"
                android:textSize="@dimen/px_24" />

            <TextView
                android:id="@+id/history_unlimited_select"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_gravity="bottom"
                android:background="@color/red" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/fl_answer"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/history_answer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="答题中"
                android:textColor="@color/blackgrey"
                android:textSize="@dimen/px_24" />

            <TextView
                android:id="@+id/history_answer_select"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_gravity="bottom"
                android:background="@color/whitegrey" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/fl_release"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/history_release"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="待发布"
                android:textColor="@color/blackgrey"
                android:textSize="@dimen/px_24" />

            <TextView
                android:id="@+id/history_release_select"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_gravity="bottom"
                android:background="@color/whitegrey" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/fl_finish"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/history_finish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="已完成"
                android:textColor="@color/blackgrey"
                android:textSize="@dimen/px_24" />

            <TextView
                android:id="@+id/history_finish_select"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_gravity="bottom"
                android:background="@color/whitegrey" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/fl_share"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/history_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="共享"
                android:textColor="@color/blackgrey"
                android:textSize="@dimen/px_24" />

            <TextView
                android:id="@+id/history_share_select"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_gravity="bottom"
                android:background="@color/whitegrey" />
        </FrameLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/unlited_nodate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:text="暂无数据"
        android:textColor="@color/blackgrey"
        android:textSize="@dimen/px_28"
        android:visibility="gone" />

    <com.work.teacher.view.CustomListView
        android:id="@+id/work_unlited_lists"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:divider="@color/whitegrey"
        android:dividerHeight="10dp"
        android:fastScrollEnabled="true"
        android:focusableInTouchMode="true"
        android:scrollbars="none" />
</LinearLayout>