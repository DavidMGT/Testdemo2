<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="10dp" >

        <com.work.teacher.view.AvatarView
            android:id="@+id/avatar_details"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:scaleType="centerInside"
            android:src="@drawable/avatar" >
        </com.work.teacher.view.AvatarView>

        <TextView
            android:id="@+id/tv_name_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/avatar_details"
            android:text="小名"
            android:textColor="@color/blackgrey"
            android:textSize="@dimen/px_24" />
         <TextView
            android:id="@+id/tv_tel_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/tv_name_details"
            android:text="电话"
            android:textColor="@color/blackgrey"
            android:textSize="@dimen/px_24" />

        <TextView
            android:id="@+id/tv_details_items"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="是"
            android:textSize="@dimen/px_24"
            android:textColor="@color/green" />
    </RelativeLayout>

</LinearLayout>