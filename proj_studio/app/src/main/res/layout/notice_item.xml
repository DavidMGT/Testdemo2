<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_title_notice"
            style="@style/text_style_color_black_size15"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="3"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="星期五早上9:00开家长会，请准时到场" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_release_notice"
                android:layout_width="80dp"
                android:layout_height="27dp"
                android:background="@drawable/notice_release_hurs"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_hurs_notice"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/hourglass_easyicon" />

                <TextView
                    android:id="@+id/tv_hurs_notice"
                    style="@style/text_header_title_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="定 时" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_content_notice"
        style="@style/text_style_color_gray_size13"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:padding="10dp"
        android:singleLine="true"
        android:text="内容简介：开家长会开家长会开家长会开家长会开家长" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp">

        <TextView
            android:id="@+id/tv_feedback_notice"
            style="@style/text_style_color_gray_size13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="反馈：25/64" />

        <TextView
            android:id="@+id/tv_agree_notice"
            style="@style/text_style_color_green_size13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="是：20" />

        <TextView
            android:id="@+id/tv_disagree_notice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="否：15"
            android:textColor="@color/red"
            android:textSize="13sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_date_notice"
        style="@style/text_style_color_gray_size13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="发布时间：2016-04-19" />

</LinearLayout>