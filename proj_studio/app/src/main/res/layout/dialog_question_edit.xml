<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relat_dialog_addwrok"
        android:layout_width="@dimen/y400"
        android:layout_height="@dimen/y400"
        android:background="@drawable/dialiog_select_bg"
        android:padding="@dimen/x10">

        <TextView
            android:id="@+id/tv_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@color/white"
            android:text="" />

        <LinearLayout
            android:id="@+id/ll_commit_again"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_36_80"
            android:layout_above="@+id/tv_center"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/y30"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_commit_again"
                android:layout_width="@dimen/px_50"
                android:layout_height="@dimen/px_50"
                android:src="@drawable/addwork_no" />

            <TextView
                android:id="@+id/tv_collect_dialog"
                style="@style/edittext_style1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="再发布" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_preview_bg"
            android:layout_width="@dimen/height_36_80"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/y40"
            android:layout_toLeftOf="@+id/tv_center"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_preview"
                android:layout_width="@dimen/px_50"
                android:layout_height="@dimen/px_50"
                android:src="@drawable/error_no" />

            <TextView
                android:id="@+id/tv_error_dialog"
                style="@style/edittext_style1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="预览" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_output_bg"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_36_80"
            android:layout_below="@+id/tv_center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/y40"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_output"
                android:layout_width="@dimen/px_50"
                android:layout_height="@dimen/px_50"
                android:src="@drawable/edtior_no" />

            <TextView
                android:id="@+id/tv_editor_dialog"
                style="@style/edittext_style1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="导出结果" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_check_bg"
            android:layout_width="@dimen/height_36_80"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/y35"
            android:layout_toRightOf="@+id/tv_center"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_check_report"
                android:layout_width="@dimen/px_50"
                android:layout_height="@dimen/px_50"
                android:src="@drawable/addwork_no" />

            <TextView
                android:id="@+id/tv_add_dialog"
                style="@style/edittext_style1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="查看报告" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
