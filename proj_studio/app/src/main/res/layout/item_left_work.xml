<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="4"
        android:background="@color/whitegreen"
        android:orientation="vertical" >

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/jz_left_work"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="10dp"
                    android:text="章节"
                    android:textColor="@color/white"
                    android:textSize="@dimen/px_28" />

                <LinearLayout
                    android:id="@+id/subject_left_ll"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingRight="10dp" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:text="学科"
                        android:textColor="@color/white"
                        android:textSize="@dimen/px_24" />

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_weight="2" >

                        <TextView
                            android:id="@+id/left_subject_work"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:background="@color/oldgreen"
                            android:gravity="center"
                            android:paddingRight="40dp"
                            android:textColor="@color/white" />
                    </FrameLayout>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/teaching_linl"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingRight="10dp" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:text="教材"
                        android:textColor="@color/white"
                        android:textSize="@dimen/px_24" />

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_weight="2" >

                        <Spinner
                            android:id="@+id/teaching_spinner_work"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:background="@color/oldgreen"
                            android:gravity="center" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right|center_vertical"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/spinner_donw" />
                    </FrameLayout>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />
                </LinearLayout>

                <ListView
                    android:id="@+id/grade_left_work"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:divider="@null" >
                </ListView>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_close_left_work"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/close_left_work"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:src="@drawable/work_close_menu" />
    </LinearLayout>

</LinearLayout>