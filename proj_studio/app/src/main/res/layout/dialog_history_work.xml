<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#00000000"
    android:gravity="center"
    >
    <RelativeLayout
        android:id="@+id/relat_dialog_historywrok"
        android:layout_width="@dimen/height_73_80"
        android:layout_height="@dimen/height_73_80"
        android:background="@drawable/dialog_history_bg"
        >
        <LinearLayout
            android:id="@+id/ll_check_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:padding="10dp"
            >
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/query_exam"
                />
            <TextView
                android:id="@+id/tv_check_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查看成绩"
                android:textColor="@color/weakgrey"
                android:textSize="@dimen/px_22"
                android:layout_marginTop="10dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_36_80"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            >
            <Button
                android:id="@+id/btn_dialog_delay"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="延迟"
                android:textColor="@color/weakgrey"
                android:textSize="@dimen/px_22"
                android:background="@null"
                android:paddingRight="15dp"
                android:paddingLeft="5dp"
                />
            <Button
                android:id="@+id/btn_dialog_delete"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="删除"
                android:textColor="@color/weakgrey"
                android:textSize="@dimen/px_22"
                android:background="@null"
                android:paddingRight="15dp"
                android:paddingLeft="5dp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_36_80"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            >
            <Button
                android:id="@+id/btn_dialog_export"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="共享"
                android:textColor="@color/weakgrey"
                android:textSize="@dimen/px_22"
                android:background="@null"
                android:paddingRight="5dp"
                android:paddingLeft="15dp"
                />
            <Button
                android:id="@+id/btn_dialog_release"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="发布"
                android:textColor="@color/weakgrey"
                android:textSize="@dimen/px_22"
                android:background="@null"
                android:paddingRight="5dp"
                android:paddingLeft="15dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/height_36_80"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            >
            <Button
                android:id="@+id/btn_dialog_rolling"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="收卷"
                android:textColor="@color/weakgrey"
                android:textSize="@dimen/px_22"
                android:background="@null"
                android:paddingRight="15dp"
                android:paddingLeft="5dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                />
            <Button
                android:id="@+id/btn_dialog_preview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="预览"
                android:textColor="@color/weakgrey"
                android:textSize="@dimen/px_22"
                android:background="@null"
                android:paddingRight="5dp"
                android:paddingLeft="15dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="@dimen/height_36_80"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            >
            <Button
                android:id="@+id/btn_dialog_edit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="编辑"
                android:textColor="@color/weakgrey"
                android:textSize="@dimen/px_22"
                android:background="@null"
                android:paddingRight="15dp"
                android:paddingLeft="5dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                />
            <Button
                android:id="@+id/btn_dialog_correct"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="批改"
                android:textColor="@color/weakgrey"
                android:textSize="@dimen/px_22"
                android:background="@null"
                android:paddingRight="5dp"
                android:paddingLeft="15dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                />
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>
