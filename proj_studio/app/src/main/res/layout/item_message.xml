<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y150"
    android:background="@color/whitegrey"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_message_icon"
        android:layout_width="@dimen/y150"
        android:layout_height="@dimen/y150"
        android:src="@drawable/avatar"
         />
    <RelativeLayout
        android:paddingLeft="@dimen/y40"
    android:layout_toRightOf="@+id/iv_message_icon"
    android:layout_width="match_parent"
        android:gravity="center_vertical"
    android:layout_height="match_parent">
<TextView
    android:id="@+id/tv_notify_title"
    android:text="AXXXX班級"
    android:textSize="16sp"

    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
        <TextView
            android:layout_below="@id/tv_notify_title"
            android:id="@+id/tv_notify_content"
            android:text="AXXXX班級"
            android:textSize="13sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_newst_time"
           android:layout_alignParentRight="true"
            android:text="13:00"
            android:textSize="13sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_below="@id/tv_newst_time"
            android:layout_alignParentRight="true"
            android:text="13:00"
            android:background="@drawable/income_count"
            android:textSize="13sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
</RelativeLayout>

</RelativeLayout>
