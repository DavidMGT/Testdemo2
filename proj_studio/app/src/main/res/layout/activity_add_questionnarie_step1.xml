<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray1"
    android:paddingTop="@dimen/x10">

    <ImageView
        android:id="@+id/iv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginRight="@dimen/x10"
        android:src="@drawable/add_work_one" />

    <EditText
        android:id="@+id/et_question_title"
        style="@style/edittext_style1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv"
        android:layout_marginTop="@dimen/y10"
        android:hint="请输入" />

    <TextView
        android:id="@+id/tv_selections"
        style="@style/text_style1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_question_title"
        android:padding="@dimen/x15"
        android:text="内容" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_selections">

        <EditText
            android:id="@+id/et_question_content"
            style="@style/edittext_style1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y10"
            android:hint="请输入"
            android:minHeight="@dimen/y300" />
    </ScrollView>
</RelativeLayout>
