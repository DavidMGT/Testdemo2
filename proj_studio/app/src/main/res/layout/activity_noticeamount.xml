<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whitegrey"
    tools:context="com.work.teacher.WorkActivity">

    <include layout="@layout/top" />

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="45dp">

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/ll_1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/text_style_color_gray_size13"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="教师" />

                        <TextView
                            android:id="@+id/teacher_noticeamount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1/3"
                            android:textColor="@color/green"
                            android:textSize="@dimen/px_24" />
                    </LinearLayout>

                    <RadioButton
                        android:id="@+id/rb_teacher"
                        style="@style/text_style_color_gray_size13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginRight="10dp"
                        android:button="@null"
                        android:drawableRight="@drawable/selector_notice_amount"
                        android:text="全选  " />
                </FrameLayout>

                <ListView
                    android:id="@+id/teacher_notice_lits"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:descendantFocusability="blocksDescendants"
                    android:divider="@color/whitegrey"
                    android:dividerHeight="1dp"></ListView>

                <FrameLayout
                    android:id="@+id/ll_2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/text_style_color_gray_size13"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="学生" />

                        <TextView
                            android:id="@+id/student_noticeamount"
                            style="@style/text_style_color_gray_size13"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1/3" />
                    </LinearLayout>

                    <RadioButton
                        android:id="@+id/rb_student"
                        style="@style/text_style_color_gray_size13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginRight="10dp"
                        android:button="@null"
                        android:drawableRight="@drawable/selector_notice_amount"
                        android:text="全选  " />
                </FrameLayout>

                <ListView
                    android:id="@+id/student_notice_lits"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:descendantFocusability="blocksDescendants"
                    android:divider="@color/whitegrey"
                    android:dividerHeight="1dp"></ListView>

                <FrameLayout
                    android:id="@+id/ll_3"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/text_style_color_gray_size13"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="家长" />

                        <TextView
                            android:id="@+id/patriarch_noticeamount"
                            style="@style/text_style_color_gray_size13"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1/3" />
                    </LinearLayout>

                    <RadioButton
                        android:id="@+id/rb_patriarch"
                        style="@style/text_style_color_gray_size13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginRight="10dp"
                        android:button="@null"
                        android:drawableRight="@drawable/selector_notice_amount"
                        android:text="全选  " />
                </FrameLayout>

                <ListView
                    android:id="@+id/patriarch_notice_lits"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:descendantFocusability="blocksDescendants"
                    android:divider="@color/whitegrey"
                    android:dividerHeight="1dp"></ListView>
            </LinearLayout>
        </ScrollView>

        <include layout="@layout/layout_net" />
    </FrameLayout>

</RelativeLayout>