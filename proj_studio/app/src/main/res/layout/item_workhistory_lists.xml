<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_title_work"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="3"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="星期五早上9:00开家长会，请准时到场"
            android:textColor="@color/blackgrey"
            android:textSize="@dimen/px_28" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/ll_release_work"
                android:layout_width="80dp"
                android:layout_height="27dp"
                android:background="@drawable/work_finsh"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/iv_hurs_work"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/hourglass_easyicon" />

                <TextView
                    android:id="@+id/tv_hurs_work"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="未完成"
                    android:textColor="@color/white"
                    android:textSize="@dimen/px_20" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp" >

        <TextView
            android:id="@+id/tv_type_work"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="类型：作业"
            android:textColor="@color/blackgrey"
            android:maxEms="5"
            android:ellipsize="end"
            android:singleLine="true"
            android:textSize="@dimen/px_22" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:paddingLeft="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="总题数 "
            android:textColor="@color/blackgrey"
            android:textSize="@dimen/px_22" />

        <TextView
            android:id="@+id/tv_allnum_work"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:textColor="@color/green"
            android:textSize="@dimen/px_22" />

        <TextView
            android:id="@+id/tv_selectAnswer_work"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:textColor="@color/green"
            android:textSize="@dimen/px_22"
            android:layout_marginLeft="10dp"
            />

        <!--<TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="阅读理解 "
            android:textColor="@color/blackgrey"
            android:textSize="@dimen/px_22" />

        <TextView
            android:id="@+id/tv_understand_work"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:textColor="@color/green"
            android:textSize="@dimen/px_22" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="填空题 "
            android:textColor="@color/blackgrey"
            android:textSize="@dimen/px_22" />

        <TextView
            android:id="@+id/tv_cloze_work"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:textColor="@color/green"
            android:textSize="@dimen/px_22" />-->
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_release_work"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="发布时间:2016-04-19"
            android:textColor="@color/blackgrey"
            android:textSize="@dimen/px_22" />
        <TextView
            android:id="@+id/tv_rolling_work"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="收卷时间:2016-04-19"
            android:textColor="@color/blackgrey"
            android:textSize="@dimen/px_22" />
    </LinearLayout>

</LinearLayout>