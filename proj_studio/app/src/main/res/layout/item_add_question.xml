<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y70"
    android:background="@color/white">

    <TextView
        android:id="@+id/tv_selct_position"
        style="@style/text_style1"
        android:layout_width="@dimen/x50"
        android:layout_height="@dimen/x50"
        android:layout_centerVertical="true"
        android:background="@drawable/drawable_white_bg_strok_gray"
        android:gravity="center"
        android:padding="@dimen/x5"
        android:text="A" />

    <EditText
        android:id="@+id/et_select_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/x10"
        android:layout_toRightOf="@id/tv_selct_position"
        android:hint="请输入选项内容"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_delete_selection"
        style="@style/text_style2_red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="删除" />F
</RelativeLayout>
